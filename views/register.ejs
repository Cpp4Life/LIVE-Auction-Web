<%- include('partials/header'); -%>
    <link rel="stylesheet" href="css/register.css">
    </head>

    <body>
        <section class="colored-section" style="padding:0 15%;">
            <%- include('partials/navbar'); -%>
        </section>
        <div class="container my-5 px-5">
            <form action="/register" method="POST">
                <h3 class="font-weight-bold text-center">ĐĂNG KÝ</h3>
                <p class="py-3 font-weight-light text-center">Nếu bạn chưa có tài khoản, hãy điền thông tin đăng ký tại đây</p>
                <div class="form-group">
                    <label class="form-group font-weight-bold"> Họ và tên </label>
                    <input type="text" class="form-control " placeholder="Nhập họ và tên của bạn">
                </div>

                <div class="form-group">
                    <label for="inputEmail4" class="font-weight-bold">Email</label>
                    <input type="email" class="form-control" placeholder="Nhập Email của bạn" id="inputEmail4">
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="inputPassword4" class="font-weight-bold">Mật khẩu</label>
                        <input type="password" class="form-control" placeholder="Nhập mật khẩu của bạn" id="inputPassword4">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="inputPassword4" class="font-weight-bold">Xác minh</label>
                        <input type="password" class="form-control" placeholder="Xác minh lại mật khẩu" id="inputPassword4">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <div class="font-weight-bold"> Ngày sinh </div>
                        <input class="mt-3" type="date">
                    </div>
                </div>
                <div class="container-fluid text-center mt-5">
                    <button type="submit" class="btn btn-primary btn-lg">Đăng ký</button>
                </div>
            </form>
            <div class="container-fluid text-center mt-5">
                <div class="my-2">
                    <a class="btn btn-width btn-google" href="#" role="button">
                        <i class="fab fa-google"></i>
                        Sign Up with Google
                    </a>
                </div>
                <div class="my-2">
                    <a class="btn btn-width btn-facebook" href="#" role="button">
                        <i class="fab fa-facebook"></i>
                        Sign Up with Facebook
                    </a>
                </div>
            </div>
        </div>
        <%- include('partials/footer'); -%>