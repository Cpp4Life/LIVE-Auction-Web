<!-- Nav Bar -->
<div class="row">
    <div class="col-lg-9">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <a class="navbar-brand" href="/"><img src="/images/auction-logo.png" alt="logo" class="d-inline-block align-top">Auct Boi</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">Category</a>
                        <ul class="dropdown-menu multi-level" role="menu">
                            <% Category.forEach(element=> { %>
                                <li class="dropdown-submenu">
                                    <a class="dropdown-item">
                                        <%= element.brand %>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <% element.subBrand.forEach(itemType=> { %>
                                            <li class="dropdown-item"><a href="/<%= _.snakeCase(element.brand.normalize('NFD').replace(/[\u0300-\u036f]/g, '')) %>/<%= _.snakeCase(itemType.normalize('NFD').replace(/[\u0300-\u036f]/g, '')) %>" class="text-decoration-none text-dark">
                                                    <%= itemType %>
                                                </a></li>
                                            <% }) %>
                                    </ul>
                                </li>
                                <% }) %>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div class="col-lg-3 my-auto">
        <% if (typeof user=='undefined' ) { %>
            <div class="login-section">
                <a class="btn btn-outline-secondary text-white login" href="/user/login" role="button">Log in</a>
                <a class="btn btn-primary text-white signup" href="/user/register" role="button">Sign up</a>
            </div>
            <% } else { %>
                <div class="login-section">
                    <div class="input-group-prepend">
                        <p class="text-white username my-auto ml-auto">Hello,
                            <span style="color:#FFAB4C">
                                <%= user.name %>
                            </span>
                        </p>
                        <button class="btn btn-secondary bg-transparent" id="userIconBtn" type="button" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-user-circle fa-2x"></i></button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/<%= user.role %>/profile">Profile</a>
                            <a class="dropdown-item" href="/user/logout">Log out</a>
                        </div>
                    </div>
                </div>
                <% } %>
    </div>
</div>